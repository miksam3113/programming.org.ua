    {{> ../../header/header}}
    <main>
      <section class="banner">
        <h1 class="banner-title">
          {{ htmlWebpackPlugin.options.translations.home.intro.title }}
        </h1>
        <ul class="banner-list">
          <li class="banner-list-item">
            <i class="fa fa-check"></i>
            {{ htmlWebpackPlugin.options.translations.home.intro.item1 }}
          </li>
          <li class="banner-list-item">
            <i class="fa fa-check"></i>
            {{{ htmlWebpackPlugin.options.translations.home.intro.item2 }}}
          </li>
          <li class="banner-list-item">
            <i class="fa fa-check"></i>
            {{ htmlWebpackPlugin.options.shppAge }}
          </li>
        </ul>
        <div class="banner-courses">
          <a class="banner-course" href="{{ htmlWebpackPlugin.options.langPrefix }}/courses/adults">
            <h3 class="banner-course-type">{{ htmlWebpackPlugin.options.translations.home.intro.courses.adults.title }}</h3>
            <span class="banner-course-tip">{{ htmlWebpackPlugin.options.translations.home.intro.courses.adults.tip }}</span>
            <span class="banner-course-date">{{ htmlWebpackPlugin.options.translations.home.intro.courses.adults.start }}{{ htmlWebpackPlugin.options.startDate }}</span>
          </a>
          <a class="banner-course" href="{{ htmlWebpackPlugin.options.langPrefix }}/courses#teens">
            <h3 class="banner-course-type">{{ htmlWebpackPlugin.options.translations.home.intro.courses.teens.title }}</h3>
            <span class="banner-course-tip">{{ htmlWebpackPlugin.options.translations.home.intro.courses.teens.age }}</span>
          </a>
        </div>
      </section>
      <section class="about-us">
        <div class="about-us-container container">
          <h2 class="about-us-title">{{ htmlWebpackPlugin.options.translations.home.about.title }}</h2>
          <div class="about-us-text">
            {{#each htmlWebpackPlugin.options.translations.courses_p }}
            <p>{{{ this }}}</p>
            {{/each}}
          </div>
        </div>
      </section>
      <section class="feedbacks" @vue:mounted="mounted()" :style="{ display: feedbacks?.length > 0 ? 'block' : 'none' }">
        <h2 class="feedbacks-title">{{ htmlWebpackPlugin.options.translations.home.feedbacks.title }}</h2>
        <div class="feedbacks-container container">
          <div class="feedbacks-slider-container">
            <div class="swiper feedbacks-slider">
              <div class="swiper-wrapper">
                <div class="feedbacks-slide swiper-slide" v-for="(feedback, index) in feedbacks">
                  <header class="feedbacks-slide-header">
                    <img class="feedbacks-slide-image" :src="getImage(feedback)" :alt="getName(feedback)" />
                    <a class="feedbacks-slide-name-link" :href="feedback.link" target="_blank">
                      <strong>\{{getName(feedback)}}</strong>
                    </a>
                  </header>
                  <p class="feedbacks-slide-text" v-if="!isLongText(feedback.message)">\{{feedback.message}}</p>
                  <p class="feedbacks-slide-text" v-else>
                      \{{shouldShowFullText(index) ? feedback.message : getShortText(feedback.message)}}
                    </br>
                    <a class="feedbacks-slide-link" v-if="!shouldShowFullText(index)" @click="more(index)">{{ htmlWebpackPlugin.options.translations.read_more }}</a>
                  </p>
                </div>
              </div>
            </div>
            <i class="feedbacks-slider-previous fa fa-chevron-left" aria-hidden="true"></i>
            <i class="feedbacks-slider-next fa fa-chevron-right" aria-hidden="true"></i>
          </div>
          <div class="swiper-pagination"></div>
          <div class="feedbacks-buttons">
            <a href="{{ htmlWebpackPlugin.options.langPrefix }}/feedback-form" class="feedbacks-buttons-leave-your-feedback button-primary">{{ htmlWebpackPlugin.options.translations.feedback_button }}</a>
            <a href="{{ htmlWebpackPlugin.options.langPrefix }}/feedback-all" class="feedbacks-buttons-watch-all-responses">{{ htmlWebpackPlugin.options.translations.adults.feedbacks.see_all }}</a>
          </div>
        </div>
      </section>
      <section class="blog-posts" @vue:mounted="mounted()" :style="{ display: blogPosts?.length > 0 ? 'block' : 'none' }">
        <div class="container">
          <h2>{{ htmlWebpackPlugin.options.translations.home.latest_news.title }}</h2>
          <ul>
            <li v-for="post in blogPosts">
              <img
                v-if="post._embedded['wp:featuredmedia'][0].media_details.sizes.large.source_url"
                :src="post._embedded['wp:featuredmedia'][0].media_details.sizes.large.source_url"
                alt=""
              />
              <h3>
                <a :href="post.link">\{{ post.title.rendered }}</a>
              </h3>
              <div v-html="post.excerpt.rendered"></div>
              <span class="date">\{{post.date.split('T')[0]}}</span>
            </li>
          </ul>
          <div class="more-posts-container">
            <a class="more-posts" href="https://blog.programming.org.ua">
              {{ htmlWebpackPlugin.options.translations.home.latest_news.see_all }}
            </a>
          </div>
        </div>
      </section>
      <section class="manifesto">
        <div class="container">
          <h2>
            {{{ htmlWebpackPlugin.options.translations.good_school_manifesto.title }}}
          </h2>

          <ul>
            {{#each htmlWebpackPlugin.options.translations.good_school_manifesto.p }}
